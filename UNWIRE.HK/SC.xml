            <dc:creator>
                <![CDATA[Oscar]]>
            </dc:creator>
            <pubDate>Wed, 30 Oct 2024 11:30:11 +0000</pubDate>
            <category>
                <![CDATA[游戏情报]]>
            </category>
            <category>
                <![CDATA[PlayStation 5]]>
            </category>
            <category>
                <![CDATA[PS5]]>
            </category>
            <category>
                <![CDATA[SONY]]>
            </category>
            <category>
                <![CDATA[SONY PlayStation 5]]>
            </category>
