            <dc:creator>
                <![CDATA[Oscar]]>
            </dc:creator>
            <pubDate>Mon, 03 Mar 2025 09:40:12 +0000</pubDate>
            <category>
                <![CDATA[Mac OS X]]>
            </category>
            <category>
                <![CDATA[Apple]]>
            </category>
            <category>
                <![CDATA[Apple M4]]>
            </category>
            <category>
