            <category>
                <![CDATA[人工智能]]>
            </category>
            <category>
                <![CDATA[AI]]>
            </category>
            <category>
                <![CDATA[IKEA]]>
            </category>
            <category>
                <![CDATA[无人机]]>
            </category>
            <category>
                <![CDATA[物流]]>
            </category>
