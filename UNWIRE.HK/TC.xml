            <dc:creator>
                <![CDATA[唐美鳳]]>
            </dc:creator>
            <pubDate>Mon, 22 Apr 2024 03:00:51 +0000</pubDate>
            <category>
                <![CDATA[手提電話]]>
            </category>
            <category>
                <![CDATA[Dimensity 6300]]>
            </category>
            <category>
                <![CDATA[MediaTek]]>
