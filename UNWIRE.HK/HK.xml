            <dc:creator>
                <![CDATA[藍骨]]>
            </dc:creator>
            <pubDate>Fri, 04 Apr 2025 12:00:16 +0000</pubDate>
            <category>
                <![CDATA[生活科技]]>
            </category>
            <category>
                <![CDATA[心臟起搏器]]>
            </category>
            <category>
                <![CDATA[醫療]]>
