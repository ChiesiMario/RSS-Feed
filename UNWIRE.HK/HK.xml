            <dc:creator>
                <![CDATA[Oscar]]>
            </dc:creator>
            <pubDate>Wed, 28 Aug 2024 09:00:51 +0000</pubDate>
            <category>
                <![CDATA[手提電話]]>
            </category>
            <category>
                <![CDATA[科技新聞]]>
            </category>
            <category>
                <![CDATA[Apple iPhone]]>
