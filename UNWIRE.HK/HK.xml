            <dc:creator>
                <![CDATA[Edward]]>
            </dc:creator>
            <pubDate>Thu, 14 Nov 2024 11:35:33 +0000</pubDate>
            <category>
                <![CDATA[生活科技]]>
            </category>
            <category>
                <![CDATA[AI]]>
            </category>
            <category>
                <![CDATA[ChatGPT]]>
            </category>
            <category>
                <![CDATA[fevaworks]]>
            </category>
