            <guid isPermaLink="false">https://tw.news.yahoo.com/deepseek%E6%89%93%E7%A0%B4ai%E6%88%90%E6%9C%AC%E5%81%87%E8%A8%AD-%E8%83%BD%E6%BA%90%E4%BC%81%E6%A5%AD%E4%B9%9F%E5%8F%97%E8%A1%9D%E6%93%8A-140026172.html</guid>
