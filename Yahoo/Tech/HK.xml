            <guid isPermaLink="false">https://tw.news.yahoo.com/%E7%BE%8E%E5%9C%8B%E5%AD%B8%E7%94%9F%E7%B0%BD%E8%AD%89%E5%A4%A7%E9%80%83%E6%AE%BA-%E9%80%BE1680%E5%90%8D%E5%9C%8B%E9%9A%9B%E7%94%9F%E8%A2%AB%E8%BF%AB%E9%81%A3%E8%BF%94-%E7%B0%BD%E8%AD%89%E7%82%BA%E4%BD%95%E8%A2%AB%E5%90%8A%E9%8A%B7-%E5%AD%B8%E7%94%9F%E7%B0%BD%E8%AD%89%E6%80%8E%E9%BA%BC%E6%8B%BF-092919137.html</guid>
