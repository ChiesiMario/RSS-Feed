            <guid isPermaLink="false">https://tw.news.yahoo.com/%E9%9B%BB%E4%BF%A1%E4%B8%89%E9%9B%84%E5%82%AC5g-%E7%94%A8%E6%88%B6%E5%8F%A9%E9%97%9C%E5%8D%83%E8%90%AC-201000433.html</guid>
