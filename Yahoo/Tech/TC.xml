      <guid isPermaLink="false">https://tw.news.yahoo.com/%E7%9F%B3%E9%BB%91%E6%B5%A9-%E8%99%9B%E6%93%AC%E5%88%86%E8%BA%AB%E7%B5%90%E5%90%88ai%E6%A9%9F%E5%99%A8%E4%BA%BA-%E6%94%B9%E8%AE%8A%E4%B8%96%E7%95%8C%E5%A5%91%E6%A9%9F-051522911.html</guid>
