            <guid isPermaLink="false">https://tw.news.yahoo.com/%E9%83%AD%E5%8F%B0%E9%8A%98%E5%86%8D%E5%8A%A0%E7%A2%BC-%E5%84%84%E5%96%84%E6%AC%BE-%E6%B0%B8%E9%BD%A1%E5%9F%BA%E9%87%91%E6%9C%83%E9%83%AD%E6%9B%89%E7%8E%B2%E4%B8%8B%E5%BB%9A%E9%80%81%E7%87%9F%E9%A4%8A%E9%A4%90-040332236.html</guid>
            <pubDate>Wed, 22 Jan 2025 04:03:32 GMT</pubDate>
            <author>胡，照鑫 @匯流新聞網</author>
