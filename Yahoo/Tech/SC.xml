            <guid isPermaLink="false">https://tw.news.yahoo.com/%E5%8F%B0%E7%81%A3%E8%B3%87%E5%AE%89%E5%A4%A7%E8%81%AF%E7%9B%9F%E8%B5%B4%E6%97%A5%E5%8F%83%E5%B1%95-%E5%B1%95%E7%8F%BE%E8%B3%87%E5%AE%89%E5%AF%A6%E5%8A%9B-%E6%8B%93%E5%B1%95%E5%9C%8B%E9%9A%9B%E5%90%88%E4%BD%9C%E6%96%B0%E5%A5%91%E6%A9%9F-105406150.html</guid>
