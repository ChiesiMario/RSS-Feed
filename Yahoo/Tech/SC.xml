      <guid isPermaLink="false">https://tw.news.yahoo.com/%E5%9C%8B%E6%B3%B0%E9%87%91%E6%8E%A7%E6%94%9C%E6%89%8B%E4%BA%94%E5%A4%A7%E5%AD%90%E5%85%AC%E5%8F%B8-%E9%AB%98%E9%BD%A1%E5%81%A5%E5%BA%B7%E7%94%A2%E6%A5%AD%E5%8D%9A%E8%A6%BD%E6%9C%83%E6%8F%AD%E6%A8%82%E9%BD%A1%E9%87%91%E8%9E%8D%E6%96%B0%E8%A7%A3%E6%96%B9-103109085.html</guid>
