      <guid isPermaLink="false">https://tw.news.yahoo.com/%E5%AE%88%E8%AD%B7%E6%A3%AE%E6%9E%97-%E5%AE%9C%E5%A4%A7%E6%94%9C%E6%89%8B%E7%94%A2%E6%A5%AD%E9%96%8B%E7%99%BC%E6%99%BA%E6%85%A7%E7%9B%A3%E6%B8%AC%E7%B3%BB%E7%B5%B1-130126569.html</guid>
