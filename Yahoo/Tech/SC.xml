            <guid isPermaLink="false">https://tw.news.yahoo.com/%E9%A0%90%E5%88%A4%E4%BD%A0%E7%9A%84%E9%A0%90%E5%88%A4-%E7%90%86%E8%86%9A%E5%AF%B6%E6%B0%B4%E5%A6%82%E4%BD%95-%E7%A2%BCqr%E6%A9%AB-%E6%8E%83-%E7%99%BE%E8%90%AC%E6%95%B8%E6%93%9A-083745336.html</guid>
