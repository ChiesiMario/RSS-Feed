            <guid isPermaLink="false">https://tw.news.yahoo.com/timss%E5%9C%8B%E9%9A%9B%E6%95%B8%E5%AD%B8%E7%A7%91%E5%AD%B8%E8%A9%95%E6%AF%94-%E5%8F%B0%E7%81%A32%E9%A0%85%E6%9C%89%E9%80%B2%E6%AD%A5-092609736.html</guid>
            <pubDate>Wed, 04 Dec 2024 09:26:09 GMT</pubDate>
