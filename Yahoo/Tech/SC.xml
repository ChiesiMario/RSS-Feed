            <guid isPermaLink="false">https://tw.news.yahoo.com/%E9%A6%96%E6%AC%BE-snapdragon-8-elite-%E9%9B%BB%E7%AB%B6%E6%97%97%E8%89%A6-113155103.html</guid>
