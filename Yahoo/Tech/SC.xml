            <guid isPermaLink="false">https://tw.news.yahoo.com/%E5%BC%B7%E5%8C%96%E8%B3%87%E5%AE%89%E7%9F%A5%E8%83%BD-%E5%8D%97%E5%B8%82%E6%88%B6%E5%BD%B9%E6%94%BF%E9%9B%BB%E8%85%A6%E8%B3%87%E8%A8%8A%E5%AE%89%E5%85%A8%E7%A0%94%E7%BF%92-115534766.html</guid>
