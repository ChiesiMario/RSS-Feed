            <guid isPermaLink="false">https://tw.news.yahoo.com/11%E6%9C%88%E8%B3%87%E5%AE%89%E8%81%AF%E9%98%B2%E6%83%85%E8%B3%87%E9%81%949-6%E8%90%AC%E4%BB%B6-%E5%89%B5%E9%80%BE2%E5%B9%B4%E6%96%B0%E9%AB%98-122211001.html</guid>
