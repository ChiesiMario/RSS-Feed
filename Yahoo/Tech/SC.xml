            <guid isPermaLink="false">https://tw.news.yahoo.com/%E8%BC%B8%E5%85%A5%E6%96%87%E5%AD%97%E8%AE%93chatgpt%E5%B9%AB%E4%BD%A0%E6%8B%8D%E6%88%90%E5%BD%B1%E7%89%87-openai%E6%8E%A8sora%E5%90%91meta-google%E6%AD%A3%E9%9D%A2%E9%80%B2%E6%94%BB-072030237.html</guid>
