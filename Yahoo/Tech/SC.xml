            <guid isPermaLink="false">https://tw.news.yahoo.com/%E5%BD%AD%E5%8D%9A-%E8%98%8B%E6%9E%9C%E8%88%87%E5%8D%B0%E5%B0%BC%E9%81%94%E6%88%90%E5%85%B1%E8%AD%98-%E5%B0%87%E8%A7%A3%E9%99%A4iphone-16%E9%8A%B7%E5%94%AE%E7%A6%81%E4%BB%A4-115200332.html</guid>
