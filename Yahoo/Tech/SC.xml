            <guid isPermaLink="false">https://tw.news.yahoo.com/%E5%8F%B0%E7%81%A3%E5%A4%A75g%E7%B8%BD%E7%94%A8%E6%88%B6%E6%95%B8-%E5%B9%B4%E5%A2%9E35-201000581.html</guid>
